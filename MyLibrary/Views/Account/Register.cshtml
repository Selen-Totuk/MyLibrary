@model MyLibrary.Models.User
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 p-4" style="border-radius:20px; background: var(--card-bg);">
                <div class="text-center mb-4">
                    <h3 class="fw-bold">Yeni Hesap Oluştur</h3>
                </div>
                
                <form asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Ad Soyad</label>
                        <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">E-posta</label>
                        <input asp-for="Email" class="form-control" placeholder="eposta@adres.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="******" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100 py-2">Kayıt Ol</button>
                    
                    <div class="mt-3 text-center">
                        <a asp-action="Login" class="text-decoration-none">Zaten hesabım var</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Burası Layout'taki jQuery'den SONRA çalışır, hatayı çözer *@
    <partial name="_ValidationScriptsPartial" />
}