@model MyLibrary.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">Genel İstatistikler</h2>
    
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0 bg-primary text-white">
                <h6>Toplam Kitap</h6>
                <h3>@Model.TotalBooks</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0 bg-success text-white">
                <h6>Bitirilenler</h6>
                <h3>@Model.Finished</h3>
            </div>
        </div>
        </div>
</div>