<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kitaplığım</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="@(Context.Request.Cookies["theme"] == "dark" ? "theme-dark" : "")">
    <nav class="navbar navbar-expand-lg border-bottom mb-4 shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Books" asp-action="Index">📚 Kitaplığım</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (User.Identity?.IsAuthenticated == true) {
                        <li class="nav-item"><a class="nav-link" asp-action="Reading" asp-controller="Books">📖 Okuyorum</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="ToRead" asp-controller="Books">📋 Okuyacaklarım</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Finished" asp-controller="Books">✅ Okuduklarım</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Wishlist" asp-controller="Books">🛒 Alacaklarım</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Dashboard">📊 Panel</a></li>
                    }
                </ul>
                <div class="d-flex align-items-center">
                    <button id="themeToggle" class="btn btn-sm btn-outline-secondary me-3">🌙</button>
                    @if (User.Identity?.IsAuthenticated == true) {
                        <span class="me-3 small text-muted">👤 @User.Identity.Name</span>
                        <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">Çıkış</a>
                    } else {
                        <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">Giriş</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#themeToggle").click(function() {
                $("body").toggleClass("theme-dark");
                localStorage.setItem("theme", $("body").hasClass("theme-dark") ? "dark" : "light");
            });
            if(localStorage.getItem("theme") === "dark") $("body").addClass("theme-dark");
        });
    </script>

    @* HATA ÇÖZÜMÜ BURASI: *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>